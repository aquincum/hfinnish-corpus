--relevantStem (_:t) [] = False
--relevantstem (v:t) [v1] = if v1 `elem` ['a','ä'] then relevantStem t [v1,v] else False
--relevantStem (


syllCount :: Token -> Integer
syllCount [] = 0
syllCount (h:t) = if harmonyV h == Nothing then syllCount t else 1 + (syllCount t)
